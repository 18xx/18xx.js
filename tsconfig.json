{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "module": "commonjs",
    "jsx": "react",
    "target": "es5",
    "baseUrl": ".",
    "lib": [
      "dom",
      "es2015.collection",
      "es2015.core",
      "es2015.iterable",
      "es2015.symbol",
      "es2016.array.include",
      "es2015.promise",
      "es5"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./__tests__/**/*.tsx"
  ],
  "exclude": ["/node_modules/**/*"]
}
